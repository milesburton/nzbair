<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:padding="6dip" android:orientation="horizontal" android:id="@id/row_favourite" >
	<LinearLayout android:orientation="horizontal"
		android:layout_weight="1" android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical">
			<TextView android:id="@id/title" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Linux Distributions"
				android:textSize="18sp" android:paddingLeft="5dip" android:gravity="center_vertical" />
			<LinearLayout android:orientation="horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:paddingLeft="5dip">
				<TextView android:text="Size:  " android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:textStyle="bold" />
				<TextView android:id="@id/size" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="100" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<ImageButton android:id="@id/DeleteItem"
		android:layout_width="50dip" android:layout_height="50dip"
		android:background="@drawable/delete" android:scaleType="fitXY"
		android:layout_gravity="center_vertical" />
</LinearLayout>
