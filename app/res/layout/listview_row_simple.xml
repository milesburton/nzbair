<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:padding="6dip" android:orientation="horizontal">

	<ImageView android:id="@id/icon" android:src="@drawable/boxicon"
		android:scaleType="fitXY" android:layout_width="40dip"
		android:layout_height="40dip" android:padding="5dip"
	android:gravity="center_vertical" android:layout_gravity="center_vertical" />

	<TextView android:id="@id/title" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Linux Distributions"
		android:textSize="18sp" android:paddingLeft="5dip" android:gravity="center_vertical" android:layout_gravity="center_vertical"/>

</LinearLayout>